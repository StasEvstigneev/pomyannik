<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_64dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>

    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="BottomNavMenu" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:background">@color/transparent</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInActive</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="rippleColor">@color/transparent</item>

    </style>

    <style name="BottomNavTextActive">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>

    </style>

    <style name="BottomNavTextInActive">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>

    </style>

    <style name="PlaceholderText">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>

    </style>

    <style name="FABstyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginEnd">@dimen/_32dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/_32dp</item>
        <item name="fabSize">normal</item>

    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="ListItemHeadingTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="ListItemTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="InputTextLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">@dimen/_24dp</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/textAppearanceBody1</item>
        <item name="boxStrokeColor">@color/input_box_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1dp</item>
        <item name="hintTextAppearance">@style/InputTextHintAppearance</item>
        <item name="counterTextAppearance">@style/InputTextHintAppearance</item>
        <item name="helperTextTextAppearance">@style/InputTextHintAppearance</item>
        <item name="errorTextAppearance">@style/InputTextErrorTextAppearance</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">?attr/textAppearanceBody1</item>

    </style>

    <style name="InputTextTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>

    </style>

    <style name="InputTextHintAppearance">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>

    </style>

    <style name="InputTextErrorTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="EditTextLayout">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/InputTextTextAppearance</item>

    </style>

    <style name="NotificationText">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">@color/button_background_color</item>

    </style>

    <style name="InfoText">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>

    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>

    </style>

    <style name="NamesListTextAppearance">
        <item name="android:fontFamily">@font/alumni_sans_regular</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="InputTextDropDownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginHorizontal">@dimen/_24dp</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/textAppearanceBody1</item>
        <item name="boxStrokeColor">@color/input_box_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/_1dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1dp</item>
        <item name="hintTextAppearance">@style/InputTextHintAppearance</item>
        <item name="counterTextAppearance">@style/InputTextHintAppearance</item>
        <item name="helperTextTextAppearance">@style/InputTextHintAppearance</item>
        <item name="errorTextAppearance">@style/InputTextErrorTextAppearance</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">?attr/textAppearanceBody1</item>
        <item name="background">?attr/background</item>

    </style>

    <style name="CustomExitDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <!-- Кастомизация заголовка диалога -->
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitleStyle</item>
        <!-- Кастомизация сообщения диалога -->
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogMessageStyle</item>
        <!-- Кастомизация кнопок диалога -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogNegativeButtonStyle</item>

    </style>

    <style name="CustomDialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="CustomDialogMessageStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alumni_sans_light</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CustomDialogPositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CustomDialogNegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alumni_sans_medium</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>

    </style>


</resources>